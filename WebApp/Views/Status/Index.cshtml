@model IEnumerable<Model.modStatus>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <h3>Lista departamentos - <small>cadastros</small></h3>
        <div class="x_title">
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
        </div>
        <div class="x_content">
            <div id="datatable_filter" class="dataTables_filter">
            </div><table id="datatableUser" class="table table-striped table-bordered dataTable no-footer dtr-inline"
                         role="grid" aria-describedby="datatable_info">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descricao)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descricao)
                        </td>
                        <td align="center">
                            <div class="btn-group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.idStatus }, new { @class = "btn btn-sm btn-dark" })
                                @Html.ActionLink("Remover", "Delete", new { id = item.idStatus }, new { @class = "btn btn-sm btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>