@model IEnumerable<Model.modDepartamento>

@{
    ViewBag.Title = "Lista Departamentos";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <h3>Lista departamentos - <small>cadastros</small></h3>     
        <div class="x_title">      
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>            
        </div>
        <div class="x_content">
            <div id="datatable_filter" class="dataTables_filter">
            </div><table id="datatableUser" class="table table-striped table-bordered dataTable no-footer dtr-inline"
                         role="grid" aria-describedby="datatable_info">

                <thead>
                    <tr role="row">
                        <th>
                            @Html.DisplayName("NOME")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td align="center">
                            <div class="btn-group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.idDepartamento }, new { @class = "btn btn-sm btn-dark" })
                                @Html.ActionLink("Remover", "Delete", new { id = item.idDepartamento }, new { @class = "btn btn-sm btn-danger" })
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>      
    </div>
</div>