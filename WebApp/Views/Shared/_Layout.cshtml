    <script type="text/javascript">
        $(document).ready(function () {

            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message, datahora) {

                var chatWin = $("#chatWindow");

                chatWin.html(chatWin.html() + "<b>" + name + "</b>: " + message + " " + " - " + "<i style='color:#41a2d2'>" + datahora + "</i>"+ "<br />");
            };

            $.connection.hub.start();

            $(document).keypress(function (e) {
                if (e.which == 13) {

                    chat.server.enviarMensagem($("#apelido").val(), $("#mensagem").val(), $("datahora").val());
                    $("#mensagem").val("").focus();
                }
            });
        });
    </script>
