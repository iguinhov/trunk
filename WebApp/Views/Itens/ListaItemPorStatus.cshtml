@model IEnumerable<Model.modItensListasPorStatus>

@{
    ViewBag.Title = "Lista Itens Por Status";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12">
    <div class="x_panel">
        <h3>Resultado da Pesquisa</h3>
        <button type="button" onclick="location.href='@Url.Action("PesquisaItemPorStatus", "Itens")'" class="btn btn-danger" 
                style="margin-left: 86.5%; margin-top: -3%;">
            <span class="glyphicon glyphicon-backward"></span> Voltar para pesquisa
        </button>   
        <div class="x_title">
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
        </div>
        <div class="x_content">
            <div id="datatable_filter" class="dataTables_filter">
            </div><table id="tablePesquisa" class="table table-responsive dataTable table-bordered table-striped"
                         role="grid" aria-describedby="datatable_info">
                      <thead>
                          <tr>
                              <th style="text-align:center">
                                  @Html.DisplayName("Projeto")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Item")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Solicitante")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Título")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Abertura")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Programado")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Status")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Desenvolvedor")
                              </th>
                              <th style="text-align:center">
                                  @Html.DisplayName("Descrição")
                              </th>
                                   <th style="text-align:center">
                              </th>                            
                          </tr>
                      </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="color:red;">
                                @Html.DisplayFor(modelItem => item.projeto)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.idItem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.solicitante)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.titulo)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.dtCadastro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dtProgramada)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.desenvolvedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descricao)
                            </td>
                            <td align="center">
                                @Html.ActionLink("Ver Detalhes", "Details", "Itens", new { id = item.idItem }, new { @class = "btn btn-sm btn-warning" })
                            </td> 
                        </tr>
                    }
            </table>
        </div>    
    </div>
</div>    