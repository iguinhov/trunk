@model IEnumerable<Model.modDesenvolvedores>

@{
    ViewBag.Title = "Lista Desenvolvedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <h3>Lista desenvolvedores - <small>cadastros</small></h3>
        <div class="x_title">
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
        </div>
        <div class="x_content">
            <div id="datatable_filter" class="dataTables_filter">
            </div><table id="datatableUser" class="table table-striped table-bordered dataTable no-footer dtr-inline"
                         role="grid" aria-describedby="datatable_info">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idDev)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nomeCompleto)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idDev)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nomeCompleto)
                        </td>
                        <td align="center">
                            @Html.ActionLink("Remover", "Delete", new { id = item.idDev }, new { @class = "btn btn-sm btn-warning" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>