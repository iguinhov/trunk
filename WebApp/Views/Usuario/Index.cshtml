@model IEnumerable<Model.modUsuarios>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <h3>Lista departamentos - <small>cadastros</small></h3>
        <div class="x_title">
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
        </div>
        <div class="x_content">
            <div id="datatable_filter" class="dataTables_filter">
            </div><table id="datatableUser" class="table table-striped table-bordered dataTable no-footer dtr-inline"
                         role="grid" aria-describedby="datatable_info">
                <thead>
                    <tr>                       
                        <th>
                            @Html.DisplayNameFor(model => model.nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.departamentoRetorno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.login)
                        </th>                      
                        <th>
                            @Html.DisplayNameFor(model => model.tipoUsuarioRetorno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.flAtivoRetorno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.flDesenvolvedorRetorno)
                        </th>                 
                        <th></th>
                    </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>
                                @Html.DisplayFor(modelItem => item.nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.departamentoRetorno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.login)
                            </td>                         
                            <td>
                                @Html.DisplayFor(modelItem => item.tipoUsuarioRetorno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.flAtivoRetorno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.flDesenvolvedorRetorno)
                            </td>                    
                            <td align="center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }, new { @class = "btn btn-sm btn-dark" })
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>